{
    "manifest_version": 3,
    "name": "QuickNote",
    "version": "1.0",
    "description": "Effortless and instant note-taking directly from your browser toolbar.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/note16.png",
            "48": "icons/note48.png",
            "128": "icons/note128.png"
        }
    },
    "icons": {
        "16": "icons/note16.png",
        "48": "icons/note48.png",
        "128": "icons/note128.png"
    }
}
